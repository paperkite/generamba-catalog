import Foundation
import UIKit
import SnapKit

enum {{ module_info.name }}ViewState {
    case loading
    case loaded
    case empty
	case error
}

class {{ module_info.name }}View: UIView, RootView {
    
    // MARK: - Properties
    
    lazy var collectionView: UICollectionView = {
        let flowLayout = UICollectionViewFlowLayout()
        let collectionView = UICollectionView(frame: CGRect.zero, collectionViewLayout: flowLayout)
        collectionView.alwaysBounceVertical = true
        collectionView.register(UICollectionViewCell.self, forCellWithReuseIdentifier: "UICollectionViewCellReuseIdentifier")
        return collectionView
    }()

    lazy var activityIndicator: UIActivityIndicatorView = {
        let activityIndicator = UIActivityIndicatorView()
        return activityIndicator
    }()

    // MARK: - Initializers
    
    init() {
        super.init(frame: CGRect.zero)
        
        self.addSubview(self.collectionView)
        self.addSubview(self.activityIndicator)
    }
    
    required init(coder aDecoder: NSCoder) {
        fatalError("init(coder:) has not been implemented")
    }
    
    // MARK: - Layout
    
    func setupAutoLayoutContraints(_ parentViewController: UIViewController?) {

        self.collectionView.snp.makeConstraints { (make) in
            make.edges.equalTo(self)
        }
        
        self.activityIndicator.snp.makeConstraints { (make) in
            make.center.equalTo(self)
        }

    }
    
    
    // MARK: - Methods
    
}
